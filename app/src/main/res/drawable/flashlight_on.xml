<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outside border/shadow -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="140dp"
                android:height="140dp" />
            <gradient
                android:angle="90"
                android:endColor="#8000CC66"
                android:startColor="#8000CC66" />
        </shape>
    </item>

    <!-- Inset -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#727272"
                android:startColor="#929292" />
        </shape>
    </item>

    <!-- Inside border/shadow -->
    <item
        android:bottom="15dp"
        android:left="15dp"
        android:right="15dp"
        android:top="15dp">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#8000CC66"
                android:startColor="#8000CC66" />
        </shape>
    </item>

    <!-- Main button -->
    <item
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp">
        <shape android:shape="oval">
            <solid android:color="#D0ffffff" />
        </shape>
    </item>

    <!-- Button image -->
    <item
        android:bottom="50dp"
        android:left="50dp"
        android:right="50dp"
        android:top="50dp">
        <shape android:shape="rectangle">
            <solid android:color="#00CC66" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="55dp"
        android:left="55dp"
        android:right="55dp"
        android:top="55dp">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="60dp"
        android:left="60dp"
        android:right="60dp"
        android:top="60dp">
        <shape android:shape="rectangle">
            <solid android:color="#00CC66" />
            <corners android:radius="20dp" />
        </shape>
    </item>

</layer-list>