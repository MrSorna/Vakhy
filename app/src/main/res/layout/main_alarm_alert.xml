<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#a13d3d"
    android:layout_height="match_parent">

    <!--android:background="@drawable/round_item"-->


    <com.example.mramirhosein.alarm.customanalogclockview.CustomAnalogClock
        android:id="@+id/analog_clock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="invisible"
        android:layout_gravity="left" />



    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_above="@+id/viewPager"
        android:layout_toEndOf="@+id/analog_clock" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/analog_clock" />


    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/analog_clock" />


</RelativeLayout>